// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @unique @default(autoincrement())
  name     String
  email    String   @unique
  password String
  session  Session?
}

model Session {
  id     Int  @id @unique @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}
